<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TerranovaDemo.RegisterPage"
             BackgroundColor="White"
             Title="Registro"
             Shell.NavBarHasShadow="False">

    <Shell.TitleView>
        <Grid BackgroundColor="#4CAF50" HeightRequest="50" VerticalOptions="FillAndExpand">
            <Label Text="Registro de usuario"
                   VerticalOptions="Center"
                   HorizontalOptions="Center"
                   TextColor="White"
                   FontAttributes="Bold"
                   FontSize="18"/>
        </Grid>
    </Shell.TitleView>

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="18" VerticalOptions="Center">

            <!-- LOGO -->
            <Image Source="logo.png"
                   HeightRequest="120"
                   HorizontalOptions="Center"
                   Margin="0,20,0,0"/>

            <Label Text="Crear cuenta en TerraNova"
                   FontSize="26"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="#2E7D32"
                   Margin="0,0,0,10"/>

            <!-- NOMBRE -->
            <Border Stroke="#81C784" StrokeShape="RoundRectangle 10" Padding="12" BackgroundColor="#F5F5F5">
                <Entry x:Name="NameEntry" Placeholder="Nombre completo"
                       TextColor="Black" PlaceholderColor="#388E3C"/>
            </Border>

            <!-- CORREO -->
            <Border Stroke="#81C784" StrokeShape="RoundRectangle 10" Padding="12" BackgroundColor="#F5F5F5">
                <Entry x:Name="EmailEntry" Placeholder="Correo electrónico"
                       Keyboard="Email" TextColor="Black" PlaceholderColor="#388E3C"/>
            </Border>

            <!-- CONTRASEÑA -->
            <Border Stroke="#81C784" StrokeShape="RoundRectangle 10" Padding="12" BackgroundColor="#F5F5F5">
                <Entry x:Name="PasswordEntry" Placeholder="Contraseña"
                       IsPassword="True" TextColor="Black" PlaceholderColor="#388E3C"/>
            </Border>

            <!-- BOTÓN REGISTRAR -->
            <Button x:Name="RegisterBtn"
                    Text="Crear cuenta"
                    BackgroundColor="#4CAF50"
                    TextColor="White"
                    CornerRadius="12"
                    FontAttributes="Bold"
                    HeightRequest="48"
                    Clicked="RegisterBtn_Clicked"/>

            <!-- SECCIÓN DE STATUS -->
            <Label x:Name="StatusLbl"
                   Text=""
                   TextColor="#2E7D32"
                   HorizontalOptions="Center"
                   Margin="0,10,0,0"/>

            <!-- BOTÓN DE VOLVER -->
            <Button Text="Volver al inicio de sesión"
                    BackgroundColor="Transparent"
                    TextColor="#2E7D32"
                    FontAttributes="Bold"
                    Clicked="GoLogin_Clicked"
                    Margin="0,10,0,20"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
