<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:skia="clr-namespace:SkiaSharp.Views.Maui.Controls;assembly=SkiaSharp.Views.Maui.Controls"
             xmlns:local="clr-namespace:TerranovaDemo"
             x:Class="TerranovaDemo.MainPage"
             Title="Inicio"
             Shell.NavBarIsVisible="True"
             Shell.BackgroundColor="#1B5E20"
             Shell.TitleColor="White"
             Shell.ForegroundColor="White"
             BackgroundColor="#B7E4C7"
             Padding="20">

    <Grid RowDefinitions="Auto,Auto,*,Auto" RowSpacing="20">

        <!-- Barra superior -->
        <Grid ColumnDefinitions="Auto,Auto,*,Auto" RowDefinitions="Auto,Auto">

            <Label Text="Bomba"
                   Grid.Column="0" Grid.Row="0"
                   TextColor="Black" FontSize="24" FontAttributes="Bold"
                   VerticalOptions="Center" />

            <Button x:Name="BombaButton"
                    Grid.Column="1" Grid.Row="0"
                    Text="OFF"
                    Clicked="BombaButton_Clicked"
                    BackgroundColor="Red" TextColor="White"
                    Margin="10,0,0,0" />

            <Label x:Name="HumidityLabel"
                   Grid.Column="0" Grid.Row="1"
                   Text="Humedad: --%"
                   FontSize="18" TextColor="Black" />

            <Label x:Name="TemperatureLabel"
                   Grid.Column="1" Grid.Row="1"
                   Text="Temp: --°C"
                   FontSize="18" TextColor="Black" />

        </Grid>

        <!-- Gráfica -->
        <skia:SKCanvasView x:Name="SensorsCanvas"
                           Grid.Row="2"
                           HeightRequest="300"
                           PaintSurface="OnCanvasViewPaintSurface"
                           IgnorePixelScaling="True"/>

        <!-- Barra inferior -->
        <local:BottomNavBar Grid.Row="3"/>

    </Grid>
</ContentPage>
