<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:skia="clr-namespace:SkiaSharp.Views.Maui.Controls;assembly=SkiaSharp.Views.Maui.Controls"
             xmlns:controls="clr-namespace:TerranovaDemo"
             x:Class="TerranovaDemo.MainPage"
             BackgroundColor="#B7E4C7"
             Padding="20">

    <Grid RowDefinitions="Auto,*,Auto" RowSpacing="20">

        <!-- Barra superior -->
        <Grid ColumnDefinitions="Auto,Auto,*,Auto" VerticalOptions="Start">
            <!-- Etiqueta y botón alineados a la izquierda -->
            <Label Text="Bomba"
                   Grid.Column="0"
                   TextColor="Black"
                   FontSize="24"
                   FontAttributes="Bold"
                   VerticalOptions="Center"
                   HorizontalOptions="Start" />

            <Button x:Name="BombaButton"
                    Grid.Column="1"
                    Text="OFF"
                    Clicked="BombaButton_Clicked"
                    BackgroundColor="Red"
                    TextColor="White"
                    Margin="10,0,0,0"
                    HorizontalOptions="Start"
                    VerticalOptions="Center"/>
        </Grid>

        <!-- Gráfica de sensores -->
        <skia:SKCanvasView x:Name="SensorsCanvas"
                           Grid.Row="1"
                           HeightRequest="300"
                           PaintSurface="OnCanvasViewPaintSurface"/>

        <!-- Barra inferior -->
        <controls:BottomNavBar Grid.Row="2"/>
    </Grid>
</ContentPage>
