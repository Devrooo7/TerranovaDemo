                <!-- LINK REGISTRO -->
                <HorizontalStackLayout HorizontalOptions="Center" Spacing="6">
                    <Label Text="Â¿No tienes cuenta?" TextColor="Black"/>
                    <Button Text="RegÃ­strate"
