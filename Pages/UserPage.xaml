<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:TerranovaDemo"
             x:Class="TerranovaDemo.UserPage"
             Title="Usuario"
             Shell.NavBarIsVisible="True"
             Shell.BackgroundColor="#1B5E20"
             Shell.TitleColor="White"
             Shell.ForegroundColor="White"
             BackgroundColor="#F0F0F0">

    <Grid RowDefinitions="*,Auto">

        <!-- Contenido principal centrado -->
        <ScrollView Grid.Row="0"
                    VerticalOptions="Center"
                    HorizontalOptions="Center">
            <VerticalStackLayout Padding="20,40"
                                 Spacing="20"
                                 VerticalOptions="Center"
                                 HorizontalOptions="Center"
                                 WidthRequest="320">

                <!-- T铆tulo -->
                <Label x:Name="WelcomeLbl"
                       Text="Bienvenido"
                       FontSize="26"
                       FontAttributes="Bold"
                       TextColor="#1B5E20"
                       HorizontalOptions="Center"
                       HorizontalTextAlignment="Center"/>

                <!-- Tipo de vegetaci贸n -->
                <Frame BorderColor="Black"
                       BackgroundColor="White"
                       CornerRadius="10"
                       Padding="10"
                       WidthRequest="260"
                       HorizontalOptions="Center">
                    <VerticalStackLayout>
                        <Label Text=" Tipo de Vegetaci贸n"
                               TextColor="Black"
                               FontSize="16"
                               HorizontalTextAlignment="Center"/>
                        <Picker x:Name="PlantPicker"
                                TextColor="Black"
                                WidthRequest="240"
                                HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </Frame>

                <!-- Regi贸n ambiental -->
                <Frame BorderColor="Black"
                       BackgroundColor="White"
                       CornerRadius="10"
                       Padding="10"
                       WidthRequest="260"
                       HorizontalOptions="Center">
                    <VerticalStackLayout>
                        <Label Text=" Regi贸n Ambiental"
                               TextColor="Black"
                               FontSize="16"
                               HorizontalTextAlignment="Center"/>
                        <Picker x:Name="RegionPicker"
                                TextColor="Black"
                                WidthRequest="240"
                                HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </Frame>

                <!-- Bot贸n Guardar -->
                <Button Text=" Guardar Preferencias"
                        Clicked="SaveButton_Clicked"
                        BackgroundColor="#43A047"
                        TextColor="White"
                        CornerRadius="12"
                        Padding="20,10"
                        WidthRequest="260"
                        HorizontalOptions="Center"/>

            </VerticalStackLayout>
        </ScrollView>

        <!-- Barra inferior -->
        <local:BottomNavBar Grid.Row="1"/>

    </Grid>
</ContentPage>
